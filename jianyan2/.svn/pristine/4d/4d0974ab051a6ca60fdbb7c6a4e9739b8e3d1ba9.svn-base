		apiready = function() {
			api.setRefreshHeaderInfo({
				visible : true,
				loadingImg : 'widget://image/listview/default_ptr_flip.png',
				bgColor : '#ccc',
				textColor : '#fff',
				textDown : '下拉刷新...',
				textUp : '松开刷新...',
				showTime : true
			}, function(ret, err) {
				//参数重置
				var el = document.getElementById('listview');
				el.innerHTML = "";
				page_num = 1;
				hasMore = true;
				//参数重置
				// 这里写重新渲染页面的方法
				getContentByPage(page_num);
				api.refreshHeaderLoadDone();
			});
			getContentByPage(page_num);
			api.addEventListener({
				name : 'scrolltobottom',
				extra : {
					threshold : 0 //设置距离底部多少距离时触发，默认值为0，数字类型
				}
			}, function(ret, err) {
				// 加载下一页的数据，然后向现有页面追加数据。
				page_num = page_num + 1;
				//		    alert(page_num);
				getContentByPage(page_num);
			});
		}
		function hiddenLoadMore() {
			var loadmorediv = $api.byId('loadingmore');
			loadmorediv.style.display = "none";
		}

		function showLoadMore() {
			var loadmorediv = $api.byId('loadingmore');
			loadmorediv.style.display = "block";
		}

		function hiddenkb() {
			var kbh = $api.byId('kb');
			kbh.style.display = "none";
		}

		function showkb() {
			var kbs = $api.byId('kb');
			kbs.style.display = "block";
		}

		function getContentByPage(pagenum) {
			if (!hasMore) {
				//  		hiddenLoadMore();
				/*lx添加*/
				hiddenkb();
				api.toast({
					msg : '已经是最后了'
				});
				return;
			}
			if (pagenum > 1) {
				/*lx添加*/
				hiddenkb();
				showLoadMore();
				/*lx添加*/
				showkb();
			}
			api.showProgress({
			});
			getFoods(pagenum);
		}

		function getFoods(pagenum) {
			api.ajax({
				url : SERVER_URL + SERVER_ROOT_PATH + '/common/foodsAppAction!fetchAllCheck.action',
				method : 'post',
				timeout : 30,
				data : {
					values : {
						jsonParam : $api.getStorage("username"),
						'currentPageIndex' : pagenum
					}
				}
			}, function(ret, err) {
				api.hideProgress();
				//      	var loadmorediv = $api.byId('loadingmore');
				//	    	loadmorediv.style.display = "none";
				hiddenLoadMore();
				//      	alert(JSON.stringify(ret) + 'err' + JSON.stringify(err));
				//				if (processNetWorkErr(err)) {
				//					return;
				//				}
				if (ret.status == 0) {
					var el, div;
					el = document.getElementById('listview');
					//      		var arr = eval(ret.data.list);
					var arr = ret.data;
					for (var i = 0; i < arr.length; i++) {
						div = document.createElement('div');
						div.innerHTML = '<div class="conn" onclick="selectItem(\' + JSON.stringify(arr[i]) + \')">' + '<div class="connl">' + arr[i].productName + '</div>' + '<div class="connr">' + arr[i].createdTime + '</div>' + '</div>';
						el.appendChild(div, el.childNodes[0]);
					}
				} else if (ret.status == 1) {
					hasMore = false;
				} else {
					api.alert({
						msg : err.msg
					});
				}
			});
		}

