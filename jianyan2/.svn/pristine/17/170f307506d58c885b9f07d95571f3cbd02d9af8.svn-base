<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>减盐食品列表frame</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css" />
	<link rel="stylesheet" type="text/css" href="../../css/samelist.css" />

</head>
<body>
   
	<div id='listview'></div>
	<div id = "loadingmore"><img src ='../../image/loading_more.gif' width="20px" height="20px" >  加载中...</div>
	<div id='kb'></div>
	<!--<table id = "loadingmore" width="100%"><tr width = "100%" align="center"><td align="right"><img src ='../image/loading_more.gif' width="32px" height="32px" ></td>
	<td align="left">加载中...</td></tr></table>-->
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/bts_common.js"></script>
<script type="text/javascript" src="../../script/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
	//是否 还有 内容 当status 为 1 时 没有
	var hasMore = true;
	//页码
	var page_num = 1;
	//最大页码
	var max_page = 10;

	//当前商品id，此值需要从上个页面传过来，
	var codevalue = 0;
	
    apiready = function(){
    	
    	codevalue = api.pageParam.gid;
    	
//  	alert(codevalue);
    	//Frame 中添加
		api.setRefreshHeaderInfo({
	    visible: true,
	    loadingImg: 'widget://image/listview/default_ptr_flip.png',
	    bgColor: '#ccc',
	    textColor: '#fff',
	    textDown: '下拉刷新...',
	    textUp: '松开刷新...',
	    showTime: true
	}, function(ret, err){
		//参数重置
	    var el = document.getElementById('listview');
	    el.innerHTML = "";
	    page_num = 1;
	    hasMore = true;
	   //参数重置
	   
	   // 这里写重新渲染页面的方法
	    getContentByPage(page_num);
	    api.refreshHeaderLoadDone();
	});
	
	 getContentByPage(page_num);
	
	
		api.addEventListener({
		    name:'scrolltobottom',
		    extra:{
		        threshold:0           //设置距离底部多少距离时触发，默认值为0，数字类型
		    }
		},function(ret,err){
		    // 加载下一页的数据，然后向现有页面追加数据。
		    page_num = page_num + 1;
//		    alert(page_num);
		    getContentByPage(page_num);
		});
	

    };
    
    
    function hiddenLoadMore() {
    	var loadmorediv = $api.byId('loadingmore');
	    	loadmorediv.style.display = "none";
    };
    
    function showLoadMore() {
   	 	var loadmorediv = $api.byId('loadingmore');
	    loadmorediv.style.display = "block";
    }
/*lx添加*/  function hiddenkb() {
    	
    	var kbh = $api.byId('kb');
	    	kbh.style.display = "none";
    };
    
/*lx添加*/  function showkb() {
   		
   	 	var kbs = $api.byId('kb');
	    kbs.style.display = "block";
	   
	    
    }   
    function getContentByPage(pagenum) {
    	if(!hasMore) {
//  		hiddenLoadMore();
/*lx添加*/ 	hiddenkb();
			api.toast({
	            msg:'已经是最后了'
            });
    		return;
    	}
    	
	    if (pagenum > 1) {
/*lx添加*/   hiddenkb();
	    	showLoadMore();
/*lx添加*/ 	showkb();	
	    }
//  	alert("pagenum" +pagenum);
		api.showProgress({
        });

// 		alert('url ->' + 'http://www.hibor.com.cn/ios/collect_list.asp?pg=' + pagenum + '&sc=1&lname=tVoVsTvW');
 
    	api.ajax({
//	        url:'http://www.hibor.com.cn/ios/elite_list.asp?pg=' + pagenum + "&dy=13&lname=tVoVsTvW",
//	       url:'http://www.hibor.com.cn/ios/collect_list.asp?pg=' + pagenum + '&sc=1&lname=tVoVsTvW',
			url:SERVER_URL + SERVER_ROOT_PATH + LOW_SALT_LIST,
	       
//	        url:'http://192.168.1.222:9090/ios/elite_list.asp?pg=' + pagenum + "&dy=13&lname=tVoVsTvW",
//	        url:'http://www.hibor.com.cn/ios/elite_list.asp',
	        method : 'post',
			timeout : 30,
			data: {
				values: {
					'jsonParam': codevalue,
					'currentPageIndex':pagenum,
					'pageSize':'10',
				}
			}
        },function(ret,err){
        
        	api.hideProgress();
//      	var loadmorediv = $api.byId('loadingmore');
//	    	loadmorediv.style.display = "none";
			hiddenLoadMore();
//      	alert(JSON.stringify(ret) + 'err' + JSON.stringify(err));
        	if (processNetWorkErr(err)) {
        		return;
        	}
        	//coding...
        	if (ret.status == 0) {
        		
        		var el, div;
        		el = document.getElementById('listview');
        		
//      		var arr = eval(ret.data.list);
        		var arr = ret.data;
//      		alert(JSON.stringify(arr));

				//图标路径，如果服务器端没有图标，则显示默认图标
				var iconpath = '';
        		
        		for (var i = 0; i < arr.length; i ++) {
        			//默认
        			iconpath = '../../image/default.png';
        			//如果服务器端有图标则显示服务器端的图标，没有验证服务器端的图标是否存在，只是根据值判定
        			if (!varIsNull(arr[i].thumbnailPath)) {
        				iconpath = SERVER_URL + SERVER_ROOT_PATH + arr[i].thumbnailPath;
        			}
        			
        			
        			div = document.createElement('div');
//		            div.innerHTML = '<div class="item"><img src ="'  + arr[i].urlimg + '" > ' + arr[i].dtitle +'</div>';
		            
		            var widthlist=document.documentElement.clientWidth;
		            
		            var listbox=widthlist-20;
		            
		            var listboxr=widthlist-107;
		            
		            var listboxrr2=widthlist-173;
		            
		            
		            
		            
		            div.innerHTML =
		            

					'<div class="mainb" onclick = "openDetail(\'' +arr[i].barcodeVal + '\',\''+arr[i].productName+'\',\''+arr[i].gid+'\')">' +
							'<div class="mainbox" style="width:'+listbox+'px">' +
								'<div class="mainboxl">' +

									'<img src="' + iconpath +'" width="75px" height="75px">' +
								'</div>' +
								'<div class="mainboxr" style="width:'+listboxr+'px">' +
									'<h1 style="width:'+listboxr+'px">' + arr[i].productName + '</h1>' +
									'<div class="mainboxrr">' +
										'<div class="mainboxrr1 listjg">含盐量</div>' +
										'<div class="mainboxf">：</div>' +
										'<div class="mainboxrr2" style="width:'+listboxrr2+'px">'+ toFixedWithNoZeroEnd(arr[i].sodiumVal.toFixed(2)) +'/100g(ml)</div>' +
									'</div>' +
									'<div class="mainboxrr">' +
										'<div class="mainboxrr1 listjg1">品牌</div>' +
										'<div class="mainboxf">：</div>' +
										'<div class="mainboxrr2" style="width:'+listboxrr2+'px">' + arr[i].brand +'</div>' +
									'</div>' +
									'<div class="mainboxrr">' +
										'<div class="mainboxrr1">生产厂商</div>' +
										'<div class="mainboxf">：</div>' +
										'<div class="mainboxrr2" style="width:'+listboxrr2+'px">' +arr[i].enterpriseName + '</div>' +
									'</div>' +
								'</div>' +
							'</div>' +
						'</div>' ; 
		            
		            
		            
//		            '<div class="item"><table><tr><td><img src ="'  + iconpath  + '" > </td><td>' + arr[i].productName +'</td></tr></table></div>';
//		            alert(div);
		            el.appendChild(div, el.childNodes[0]);	
//		            var line = document.createElement('div');
//		            line.innerHTML = '<div class = "line"><hr/></div>';
//		            el.appendChild(line,el.childNodes[0]);
        		}
        	}  else if (ret.status == 1) {
        	
        	if (pagenum == 1) {
        			var el, div;
        			el = document.getElementById('listview');
        			div = document.createElement('div');
//		            div.innerHTML = '<div class="item"><img src ="'  + arr[i].urlimg + '" > ' + arr[i].dtitle +'</div>';
		            div.innerHTML =
		            
					'<div class="mainb" >' +
							'该分类下目前没有商品' +
						'</div>' ; 
		            
		            
		            
//		            '<div class="item"><table><tr><td><img src ="'  + iconpath  + '" > </td><td>' + arr[i].productName +'</td></tr></table></div>';
//		            alert(div);
		            el.appendChild(div, el.childNodes[0]);	
        		}
        		hasMore = false;
        	} else {
        		//根据json规范进行的显示
        		alert(ret.data.errmsg);
        	}
        });
    }
    
    
    
    function openDetail(code,productName,gid) {
//  	alert('open' + code);
    	api.openWin({
            name: 'fooddetails',
            url: '../fooddetails/commodity_details_windows.html',
            pageParam : {
				productcode : code,
				'gid':gid,
				name:productName
			}
        });
    };
</script>

</html>