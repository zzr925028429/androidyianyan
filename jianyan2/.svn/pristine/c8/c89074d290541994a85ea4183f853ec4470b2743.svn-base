	function weixin() {
		var wx = api.require('wx');
		wx.isInstalled(function(ret, err){
			if(ret.installed){
			        
			    wx.shareImage({
			    apiKey: '',
			    scene: 'timeline',
			    thumb: 'widget://res/button.jpg',
			    contentUrl: 'fs://cache/test.png'
			}, function(ret, err){
			    if(ret.status){
			        alert('分享成功');
			    }else{
			        alert(err.code);
			    }
			});  
		        
		     setTimeout('cancel()',3000)
		    }else{
		    	 api.alert({msg:'当前设备未安装微信客户端'});
//		        alert('');
		    }
		});
	}
	



