	<body>
		
		<div id="mainb">
		</div>
		<div id = "loadingmore"><img src ='../../image/loading_more.gif' width="20px" height="20px" > 加载中...
		</div>
		<div id='kb'></div>
	</body>
	<script type="text/javascript" src="../../script/bts_common.js"></script>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/jquery-2.1.4.min.js"></script>
	<script type="text/javascript">
		//		是否 还有 内容 当status 为 1 时 没有
		var hasMore = true;
		//页码
		var page_num = 1;
		//最大页码
		var max_page = 10;
		//窗口是否为选择状态
		var delCheck = false;
		var widthb=document.documentElement.clientWidth;
		var pageIndex = 0;
		function positions(){
			$(".mainbox").width(widthb-20);
			$(".mainboxr").width(widthb-107);
			$("h1").width(widthb-123);
			$(".mainboxrr2").width(widthb-173);
			
  		}
  		
		apiready = function() {
		
			$api.setStorage('checkOne',false);
			api.setRefreshHeaderInfo({
				visible : true,
				loadingImg : 'widget://image/listview/default_ptr_flip.png',
				bgColor : '#ccc',
				textColor : '#fff',
				textDown : '下拉刷新...',
				textUp : '松开刷新...',
				showTime : true
			}, function(ret, err) {
				//参数重置
				var el = $api.byId('mainb');
				$api.html(el,'');
				page_num = 1;
				hasMore = true;
				//参数重置
				// 这里写重新渲染页面的方法
				getContentByPage(page_num);
				api.refreshHeaderLoadDone();
			});
			getContentByPage(page_num);
			api.addEventListener({
				name : 'scrolltobottom',
				extra : {
					threshold : 0 //设置距离底部多少距离时触发，默认值为0，数字类型
				}
			}, function(ret, err) {
				// 加载下一页的数据，然后向现有页面追加数据。
				page_num = page_num + 1;
				//		    alert(page_num);
				getContentByPage(page_num);
				
			});
			//监听header改变事件
			api.addEventListener({
	            name:'myshare_header'
            },function(ret,err){
            	pageIndex = ret.value.index;
            	if(delCheck){
	            	if(pageIndex==1){
		            	var arr = $(".mainboxr");
		            	for(i=0;i<arr.length;i++){
		            		$api.prepend(arr[i],'<img class="image" id="imgId2" src="../../image/userInfo/pro_wxz.png" width="15px" height="15px" />');
	
		            	}
		            	isDel();
            		}else{
            			var arr = $(".image");
	            		if(arr!=null){
		            		for(i=0;i<arr.length;i++){
		            			$api.remove(arr[i]);
		            		}
	            		}
            		}
            	}
            });
			api.addEventListener({
	            name:'myshare_start'
            },function(ret,err){
            	if(ret){
	            	delCheck = true;
	            	if(pageIndex==1){
		            	var arr = $(".mainboxr");
		            	for(i=0;i<arr.length;i++){
		            		$api.prepend(arr[i],'<img class="image" id="imgId2" src="../../image/userInfo/pro_wxz.png" width="15px" height="15px" />');
		            	}
	            	}
            	}else{
            		alert( JSON.stringify( err ) );
            	}
            });
            api.addEventListener({
	            name:'myshare_all'
            },function(ret,err){
            	if(pageIndex==1){
	            	$("div").click();
            	}
            });
            
            api.addEventListener({
	            name:'myshare_cancel'
            },function(ret,err){
            	if(ret){
            		delCheck = false;
	            	var arr = $(".image");
	            	if(arr!=null&&arr.length>0){
	            		for(i=0;i<arr.length;i++){
	            			$api.remove(arr[i]);
	            		}
	            	}
            	}
            });
            api.addEventListener({
	            name:'myshare_request'
            },function(ret,err){
            	if(ret){
            		var gid='';
            		var arr = $(".image");
            		if(arr!=null&&arr.length>0){
	            		for(i=0;i<arr.length;i++){
	            			image = arr[i];
	            			if (image.src.match("pro_xz")) {
								gid=gid+image.name+';';
							}
	            		}
	            		api.sendEvent({
							name : 'myshare_get',
							extra : {
								foodGid : gid
							}
						});
            		}
            	}
            });
            api.addEventListener({
	            name:'myshare_reload'
            },function(ret,err){
            	if(ret){
            		if(pageIndex==1){
            			var el = $api.byId('mainb');
						el.innerHTML = "";
						page_num = 1;
						hasMore = true;
						//参数重置
						// 这里写重新渲染页面的方法
						getContentByPage(page_num);
            		}
            	}
            });
           //检查删除是否可用(通过判断img元素是否包含name属性，来判断删除是否可用，必须确保不想管的img没有name属性)
//         api.addEventListener({
//	           name:'myshare_delete'
//         },function(ret,err){
//         		if(delCheck){
//         			var arr = $("img[name]");
//         			if(arr!=null&&arr.length>0){
//		           		api.sendEvent({
//						    name: 'myshare_able',
//						    extra: {
//						        isable: true
//						    }
//						});
//         			}else{
//         				api.sendEvent({
//						    name: 'myshare_able',
//						    extra: {
//						        isable: false
//						    }
//						});
//         			}
//         		}
//         });
		}
		
		function hiddenLoadMore() {
			var loadmorediv = $api.byId('loadingmore');
			loadmorediv.style.display = "none";
		}

		function showLoadMore() {
			var loadmorediv = $api.byId('loadingmore');
			loadmorediv.style.display = "block";
		}

		function hiddenkb() {
			var kbh = $api.byId('kb');
			kbh.style.display = "none";
		}

		function showkb() {
			var kbs = $api.byId('kb');
			kbs.style.display = "block";
		}

		function getContentByPage(pagenum) {
			if (!hasMore) {
				//  		hiddenLoadMore();
				/*lx添加*/
				hiddenkb();
				api.toast({
					msg : '已经是最后了'
				});
				return;
			}
			if (pagenum > 1) {
				/*lx添加*/
				hiddenkb();
				showLoadMore();
				/*lx添加*/
				showkb();
			}
			api.showProgress({
			});
			getFoods(pagenum);
			setTimeout("afterFresh()",300);
//			afterFresh();
		}

		function getFoods(pagenum) {
			
//			alert(JSON.stringify($api.getStorage("userInfo")));
			api.ajax({
				url : SERVER_URL + SERVER_ROOT_PATH + '/common/shareHistoryAction!getMyShare.action',
				method : 'post',
				timeout : 30,
				data : {
					values : {
						'userId' : $api.getStorage("userInfo").userID,
						'type':'1',
						'currentPageIndex' : pagenum
					}
				}
			}, function(ret, err) {
				api.hideProgress();

				hiddenLoadMore();

				if (ret.status == 0) {
					var el, div;
					el = $api.byId('mainb');
//					alert(JSON.stringify(ret.data));
					var arr = ret.data;
					for (var i = 0; i < arr.length; i++) {
						div= '<div class="mainb"><div class="mainbox" onclick="selectItem(this,\'' + arr[i].gid + '\')">'+
											'<div class="mainboxl">'+
												'<img src="'+SERVER_URL + SERVER_ROOT_PATH+arr[i].picture+'" width="75px" height="75px">'+
											'</div>'+
											'<div class="mainboxr">'+
												'<div class="cpm">'+arr[i].name+'</div>'+
												'<div class="jg"><span>￥'+arr[i].price+'元</span>/份</div>'+
											'</div>'+
										'</div></div>';
//						alert(el.innerHTML);
						$api.append(el, div);
						positions();
					}
				} else if (ret.status == 1) {
					hasMore = false;
				} else {
					api.alert({
						msg : err.msg
					});
				}
			});
		}

		function selectItem(obj,id) {
			if(delCheck){
				imgid =  obj.children[1].children[0];
				if (imgid.src.match("wxz")) {
					$api.attr(imgid, "name", id);
					imgid.src = "../../image/userInfo/pro_xz.png";
				} else {
					$api.removeAttr(imgid, 'name')
					imgid.src = "../../image/userInfo/pro_wxz.png";
				}
//				alert("selectItem");
				isDel();
				return;
			}
			api.openWin({
				name : 'myfood',
				url : '../dishdetails/dish_details_windows.html',
				pageParam : {
					gid : id
				}
			});
		}
		function afterFresh(){
//			alert(delCheck);
			if(delCheck){
				var image = $(".image");
				
				var num=0;
				if(image!=null&&image.length>0){
            		num = image.length;
//          		alert("num:"+num);
				}
				var arr = $(".mainboxr");
            	for(i=num;i<arr.length;i++){
//          		alert("h1:"+arr.length);
            		$api.prepend(arr[i],'<img class="image" id="imgId2" src="../../image/userInfo/pro_wxz.png" width="15px" height="15px" />');
           		}
           		isDel();
			}
		}
		function isDel(){
			var arr = $("img[src$='_xz.png']");
			if(arr!=null&&arr.length>0){
				api.sendEvent({
					name: 'myshare_able',
					extra: {
						   isable: true
					}
				});
           	}else{
           		api.sendEvent({
					name: 'myshare_able',
					extra: {
						   isable: false
					}
				});
           }
		}
	</script>
</html>